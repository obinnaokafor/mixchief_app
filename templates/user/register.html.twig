{% extends 'base2.html.twig' %}

{% block content %}

        <div class="register-form">
            <div class="card">
                <h3 class="text-center">Register to start using Amply now.</h3>
                <div class="card-body">
                    <form action="{{ path('register') }}" method="post" role="form">
                        <div class="form-group">
                            <input type="text" name="company" placeholder="Company Name" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <input type="text" name="telephone" placeholder="Telephone" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <input type="email" name="email" placeholder="Email Address" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <input type="password" name="password" placeholder="Password" class="form-control password" required>
                        </div>
                        <div class="form-group">
                            <input type="password" name="confirmpassword" placeholder="Confirm Password" class="form-control confirmpassword" required>
                        </div>
                        <input type="submit" name="submit" value="Submit" class="btn btn-primary">
                        <span class="pull-right">Already registered? <a href="{{ path('ajax', {'page': 'login'}) }}" rel="modal:open" style="color: #4a6c6f">Login</a></span>
                    </form>
                </div>
            </div>
        </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script>
        $('.confirmpassword').on('keyup', function(e){
            var $target = $(e.currentTarget);
            var $prev = $('.password');
            if ($prev.val() !== $target.val()) {
                $target.addClass("error");
            }else {
                $target.removeClass("error");
            }
        });
    </script>
{% endblock %}
