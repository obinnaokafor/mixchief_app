{% extends 'base2.html.twig' %}

{% block content %}
        <div class="login-form">
            <div class="card">
                <div class="card-header">Enter New Password</div>
                <div class="card-body">
                    {# {% if error %}
                        <div id="error">{{ error }}</div>
                    {% endif %} #}
                    <form action="{{ path('password_change') }}" method="post" role="form">
                        <input type="hidden" name="token" value="{{ token }}">
                        <div class="form-group">
                            <input type="email" name="email" class="form-control" value="{{ email }}" readonly>
                        </div>
                        <div class="form-group">
                            <input type="password" name="password" placeholder="Password" class="form-control password">
                        </div>
                        <div class="form-group">
                            <input type="password" name="confirmpassword" placeholder="Confirm Password" class="form-control confirmpassword">
                        </div>
                        <input type="submit" name="submit" value="Change Password" class="btn btn-other">
                    </form>

                </div>
            </div>
        </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script>
        $('.confirmpassword').on('keyup', function(e){
            var $target = $(e.currentTarget);
            var $prev = $('.password');
            if ($prev.val() !== $target.val()) {
                $target.addClass("error");
            }else {
                $target.removeClass("error");
            }
        });
    </script>
{% endblock %}